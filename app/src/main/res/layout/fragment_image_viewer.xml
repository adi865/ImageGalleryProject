                                tools:src="@drawable/img_group2" />

                            <TextView
                                android:id="@+id/txtDigitalIllustr"
                                style="@style/txtEuropabold14_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6pxh"
                                android:layout_weight="0.89"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Digital Illustration" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtArtist"
                            style="@style/txtEuropabold14_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_81pxh"
                            android:layout_marginTop="@dimen/_24pxv"
                            android:layout_marginEnd="@dimen/_81pxh"
